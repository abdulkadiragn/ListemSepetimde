@model IEnumerable<ProductDTO>
@{
    ViewData["Title"] = "Sepet";
    Layout = "_Layout4.cshtml";
}
<main class="main cart">
    <div class="page-content pt-10 pb-10">
        <div class="container mt-8 mb-4">
            <div class="row gutter-lg">
                <center>
                    <div class="col-lg-8 col-md-12">
                        <table class="shop-table cart-table mt-2">
                            <thead>
                                <tr>
                                    <th><span>Product</span></th>
                                    <th></th>
                                    <th><span>Price</span></th>
                                    <th><span>quantity</span></th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="product-thumbnail">
                                            <figure>
                                                <a href="product-simple.html">
                                                    <img src="@item.ImageUrl" width="100" height="100"
                                                         alt="product">
                                                </a>
                                                <a href="#" class="product-remove" title="Remove this product">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </figure>
                                        </td>
                                        <td class="product-name">
                                            <div class="product-name-section">
                                                <p>@item.Name</p>
                                            </div>
                                        </td>
                                        <td class="product-subtotal">
                                            <span class="amount">@item.Price ₺</span>
                                        </td>
                                        <td class="product-quantity">
                                            <div class="input-group">

                                                <button class="quantity-minus  d-icon-minus"></button>
                                                <input  class="quantity form-control" type="number" min="1" max="2000" value="@item.BasketCount" >
                                                <button class="quantity-plus d-icon-plus"></button>
                                            </div>
                                        </td>
                                        <td class="product-price">
                                            <span class="amount">@(item.Price*item.BasketCount) ₺</span>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                        <div class="cart-actions mb-6 pt-6">
                            <div class="coupon">
                                <input type="text" name="coupon_code" class="input-text form-control" id="coupon_code" value="" placeholder="Kupon Kodunu Giriniz..">
                                <button type="submit" class="btn btn-md">Kuponu Onayla</button>
                            </div>
                            <button type="submit" class="btn btn-md btn-icon-left">
                                Sepeti Onayla
                            </button>
                        </div>
                    </div>

                </center>
            </div>
        </div>
    </div>
</main>