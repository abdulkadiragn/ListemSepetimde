@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<center>
    <div class="login-popup">
        <div class="form-box">
            <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                <ul class="nav nav-tabs nav-fill" role="tablist">
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#signin">Üye Ol</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="signin">
                        <form method="post" asp-controller="Account" asp-action="Register">
                            <div style="color:red;" asp-validation-summary="ModelOnly"></div>
                            <div class="group-input">
                                <label asp-for="UserName"></label>
                                <input type="text" class="form-control" asp-for="UserName" />
                                <span style="color:red;" asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="email" class="form-control" asp-for="Email" />
                                <span style="color:red;" asp-validation-for="Email"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" asp-for="Password" />
                                <span style="color:red;" asp-validation-for="Password"></span>


                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordConfirm"></label>
                                <input type="password" class="form-control" asp-for="PasswordConfirm" />
                                <span style="color:red;" asp-validation-for="PasswordConfirm"></span>

                            </div>
                            <div class="form-footer">
                                <div class="form-checkbox">
                                    <input type="checkbox" class="custom-checkbox" id="register-agree" name="register-agree" />
                                </div>
                            </div>
                            <button class="btn btn-primary btn-block" type="submit">Üye Ol</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</center>
<!--Validasyom işlemlerini Client tarafında halletmek için bunları ekledik (server'a yük bindirmemek için client tarafında çözüyoruz.)-->
@section script{
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}